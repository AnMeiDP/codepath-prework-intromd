<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_green"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello from AnMei!"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:textSize="40sp" />

    <TextView
        android:id="@id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#007474"
        android:padding="8dp"
        android:text="Click to change text color"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/changeBackgroundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="#007474"
        android:text="Click to change background color"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/changeTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeBackgroundButton"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="#007474"
        android:text="Click to change text"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_above="@id/changeTextButton"
        android:hint="Create your own text" />

    <TextView
        android:id="@+id/changeCustomTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#007474"
        android:padding="10dp"
        android:text="Click to change to your text"
        android:textColor="@color/white"
        android:textSize="25sp" />

</RelativeLayout>